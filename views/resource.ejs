<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/resource.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <title>Resource</title>
</head>

<header>
  <%- include('./partials/_header') %>
</header>

<body>

  <section class="resource-container">

    <div class="content-container">
      <H1>
        <%= resource['title'] %>
          <span><a href="/category/<%= resource.name %>">
              <button class="btn btn-success">
                <span><i class="fa-solid fa-hashtag" style="color: #fff;"></i></span>
                <%= resource['name'] %>
              </button>
          </span></a>
      </H1>
      <div class="resource-list">
        <ul>
          <li><a href="<%= resource['url'] %>">
              <%= resource['url'] %>
            </a></li>
        </ul>
      </div>

      <div class="content-description">
        <p>
          <%= resource['description'] %>
        </p>
      </div>

      <div class="tags-container">

        <div class="star-rating">
          <button class="star">&#9734;</button>
          <button class="star">&#9734;</button>
          <button class="star">&#9734;</button>
          <button class="star">&#9734;</button>
          <button class="star">&#9734;</button>
          <div class="current-rating">Rating: 0 of 5</div>
          <input type="hidden" name="rating" id="rating"/>
        </div>
        <!-- <button class="btn btn-danger">Rating</button> -->

      </div>
    </div>

    <div class="comments-container">
      <form id="comment-form" action="/comments-api" method="POST">
        <div>
          <textarea id="comment-text" placeholder="Add a comment" name="comment-text" id="" cols="30"
            rows="10"></textarea>
        </div>
        <div class="button-container">
          <button type="submit" class="btn btn-danger">Post Comment</button>
        </div>
      </form>
      <h3>Comments</h3>

      <div class="appended-comments">

      </div>
    </div>

  </section>

</body>

<script type="text/javascript" src="../scripts/resource-id.js"></script>
<script type="text/javascript" src="../scripts/resource-star-rating.js"></script>
<script type="text/javascript" src="../scripts/resources.js"></script>

</html>
